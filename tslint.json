{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "jsRules": {},
  "rules": {
    "align": true,                      // Enforce vertical alignment
    "class-name": true,                 // Enforce PascalCased class and interface names
    "eofline": true,                    // Ensure files end with a newline
    "indent": [true, "spaces", 2],      // Enforce two-space indentation
    "max-line-length": [true, 120],     // Enforce line limit to 120 characters
    "member-access": true,              // Require explicit visibility declarations for class members  
    "no-console": false,                // Permit console methods
    "no-consecutive-blank-lines": true, // Enforce single consecutive blank line limit
    "no-duplicate-variable": true,      // Disallow duplicate variable names in same block scope
    "no-null-keyword": true,            // Disallow 'null' keyword literal
    "no-redundant-jsdoc": true,         // Disallow JSDoc which duplicates TS functionality
    "no-string-literal": true,          // Disallow unnecessary string-literal object property access
    "no-trailing-whitespace": true,     // Disallow trailing spaces at end of line
    "no-unused-expression": true,       // Disallow unused expressions
    "no-var-keyword": true,             // Disallow var for variable declarations
    "prefer-const": true,               // Prefer const over let for variable delcarations
    "quotemark": [true, "single"],      // Require strings to be single-quoted
    "semicolon": [true, "always"],      // Require semicolons at end of every statement
    "trailing-comma": [
      true,                             
      {
        "multiline": "always",          // Require trailing commas for multiline object/array literals ...
        "singleline": "never"           // But not for single line declarations
      }
    ],
    "typedef": true,                    // Enforce inclusion of type definitions
    "variable-name": true,              // Check variable names for camelCasing and keywords   
    "whitespace": true                  // Enforce whitespace style conventions
  },
  "rulesDirectory": []
}
